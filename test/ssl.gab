'chttp'.use
Socket = IO.Sock

req = 'GET / HTTP/1.0\r\nHost:www.google.com\r\n\r\n'

sock = Socket
  .make tcp\tls:
  .unwrap

sock
  .connect("www.google.com" 443)
  .unwrap

sock
  .write(req.to\b)
  .unwrap

res = sock.read.unwrap.as\s.unwrap
res.println

